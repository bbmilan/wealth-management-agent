# Use Python 3.12 slim image with explicit platform for Azure Container Apps
FROM --platform=linux/amd64 python:3.12-slim

# Set working directory
WORKDIR /app

# Install system dependencies including curl for health checks
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements_sk.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements_sk.txt

# Copy the rebalance agent
COPY agents/rebalance/ ./agents/rebalance/
COPY .env.azure.example .env

# Expose port
EXPOSE 8012

# Set environment variables
ENV PYTHONPATH=/app
ENV REBALANCE_AGENT_PORT=8012

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8012/health || exit 1

# Run the rebalance agent
CMD ["python", "-m", "uvicorn", "agents.rebalance.main:app", "--host", "0.0.0.0", "--port", "8012"]